<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_rectangle_shape_silver"
        android:orientation="horizontal"
        android:layout_margin="@dimen/tour_search">

        <EditText
            android:id="@+id/tour_searchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/tour_search"
            android:singleLine="true"
            android:textSize="15dp" />

        <Button
            android:id="@+id/tour_btn_search_keyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/mainBgColor"
            android:text="검색"
            android:textColor="#ffffff" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관광 타입"
        android:textSize="20dp"
        android:textColor="#F66C5B"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/tour_radio_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tour_btn_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관광지"/>
        <RadioButton
            android:id="@+id/tour_btn_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문화시설"/>
        <RadioButton
            android:id="@+id/tour_btn_festival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="축제/공연"/>
        <RadioButton
            android:id="@+id/tour_btn_leports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레저"/>
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        android:textSize="20dp"
        android:textColor="#F66C5B"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/tour_margin_top"
        android:textStyle="bold" />
    <com.kocapplication.pixeleye.kockocapp.util.MultiRowsRadioGroup
        android:id="@+id/tour_radio_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/tour_btn_seoul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울"/>
            <RadioButton
                android:id="@+id/tour_btn_incheon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인천"/>
            <RadioButton
                android:id="@+id/tour_btn_daejeon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대전"/>
            <RadioButton
                android:id="@+id/tour_btn_daegu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대구"/>
            <RadioButton
                android:id="@+id/tour_btn_gwangju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광주"/>
            <RadioButton
                android:id="@+id/tour_btn_busan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부산"/>
            <RadioButton
                android:id="@+id/tour_btn_ulsan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="울산"/>
            <RadioButton
                android:id="@+id/tour_btn_sejong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세종"/>
            <RadioButton
                android:id="@+id/tour_btn_gyeonggi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기"/>
            <RadioButton
                android:id="@+id/tour_btn_gangwon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강원"/>
            <RadioButton
                android:id="@+id/tour_btn_chungbuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충북"/>
            <RadioButton
                android:id="@+id/tour_btn_chungnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충남"/>
            <RadioButton
                android:id="@+id/tour_btn_gyeongbuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경북"/>
            <RadioButton
                android:id="@+id/tour_btn_gyeongnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경남"/>
            <RadioButton
                android:id="@+id/tour_btn_jeonbuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전북"/>
            <RadioButton
                android:id="@+id/tour_btn_jeonnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전남"/>
            <RadioButton
                android:id="@+id/tour_btn_jeju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제주"/>

        </org.apmem.tools.layouts.FlowLayout>
    </com.kocapplication.pixeleye.kockocapp.util.MultiRowsRadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="컨텐츠"
        android:textSize="20dp"
        android:textColor="#F66C5B"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/tour_margin_top"
        android:textStyle="bold" />
    <com.kocapplication.pixeleye.kockocapp.util.MultiRowsRadioGroup
        android:id="@+id/tour_radio_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/tour_btn_nature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자연"/>
            <RadioButton
                android:id="@+id/tour_btn_humanity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인문"/>
            <RadioButton
                android:id="@+id/tour_btn_leports_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레포츠"/>
            <RadioButton
                android:id="@+id/tour_btn_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쇼핑"/>
            <RadioButton
                android:id="@+id/tour_btn_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식"/>
            <RadioButton
                android:id="@+id/tour_btn_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숙박"/>
            <RadioButton
                android:id="@+id/tour_btn_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천코스"/>
        </org.apmem.tools.layouts.FlowLayout>
    </com.kocapplication.pixeleye.kockocapp.util.MultiRowsRadioGroup>

    <Button
        android:id="@+id/tour_btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBgColor"
        android:text="검색"
        android:textColor="#ffffff"
        android:layout_margin="@dimen/tour_search"/>

</LinearLayout>