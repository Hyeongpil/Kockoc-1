<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/course_date"/>

    <Button
        android:id="@+id/course_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/course_time"
        android:minWidth="10dp"
        android:padding="-5dp"
        android:drawableLeft="@drawable/course_date"
        android:drawablePadding="2dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/delete"
        android:minWidth="10dp"
        android:padding="-5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:drawableLeft="@drawable/course_time"
        android:drawablePadding="2dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:minWidth="10dp"
        android:padding="-5dp"
        android:drawableLeft="@drawable/close_red"
        android:text="삭제"
        android:textColor="@color/mainBgColor"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

</RelativeLayout>